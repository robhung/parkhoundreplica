<div class="row">
  <div class="col-md-6 col-md-offset-3 text-center">
    <h2>Welcome to Parkhound!</h2>

    <h3>Please update any empty fields.</h3>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
      <%= render 'partials/devise_message' %>

      <div class="form-group">
        <%= f.email_field :email, autofocus: true, :class => "form-control", :placeholder => "Email" %>
      </div>

      <div class="form-group">
        <%= f.text_field :first_name, :class => "form-control", :placeholder => "First Name" %>
      </div>

      <div class="form-group">
        <%= f.text_field :last_name, :class => "form-control", :placeholder => "Last Name" %>
      </div>

      <div class="form-group">
        <%= f.label :photo %>
        <% if current_user.photo_url %>
          <%= image_tag resource.photo, class: "img-circle avatar-large" %>
        <% end %>
        <%= f.file_field :photo, as: :file %>
      </div>

      <div class="form-group">
        <%= f.text_field :phone, :class => "form-control", :placeholder => "Phone" %>
      </div>

      <div class="form-group">
        <%= f.label :birthday %><br />
        <%= f.date_select :birthday, :start_year => 1920 %>
      </div>

      <div class="form-group">
        <%= f.text_field :uid, :class => "form-control", :placeholder => "Facebook ID" %>
      </div>

      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
      <% end %>

      <div class="actions">
        <%= f.submit "Update", class: "btn btn-primary" %>
      </div>
    <% end %>

    <h3>Change Password?</h3>

    <p><%#= link_to "Change Password", class: "btn btn-primary" %></p>

    <h3>Accidentally registered?</h3>

    <p><%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, class: "btn btn-danger" %></p>

    <%= link_to "Back", :back, class: "btn btn-primary"  %>
  </div>
</div>
