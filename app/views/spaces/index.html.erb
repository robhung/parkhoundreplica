<p id="notice"><%= notice %></p>

<h1>Spaces</h1>

<%= form_tag(spaces_path, :method => "get", id: "search-form") do %>
<%= text_field_tag :search, params[:search], placeholder: "Search Parking Spaces" %>
<%= text_field_tag :radius, params[:radius], placeholder: "How many km's radius?" %>
<%= submit_tag "Search" %>
<% end %>

<% if @spaces.present? %>
  <%= render @spaces %>
<% else %>
  <p>There are no parking spaces around <%= params[:search] %> within <%= params[:radius] %> km's.</p>
<% end %>

<table>
  <thead>
    <tr>
      <th>Title</th>

      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @spaces.each do |space| %>
      <tr>
        <td><%= space.title %></td>

        <td><%= link_to 'Show', space %></td>
        <td><%= link_to 'Edit', edit_space_path(space) %></td>
        <td><%= link_to 'Destroy', space, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Space', new_space_path %>
