<div class="row">
	<div class="col-md-3">
		<ul class="sidebar-list">
      <li class="sidebar-item"><%= link_to "Your Bookings", bookings_path, class: "sidebar-link" %></li>
			<li class="sidebar-item"><%= link_to "Your Listings", spaces_path, class: "sidebar-link active" %></li>
			<li class="sidebar-item"><%= link_to "Your Profile", edit_user_registration_path, class: "sidebar-link" %></li>
			<li class="sidebar-item"><%= link_to "Your Inbox", conversations_path, class: "sidebar-link" %></li>
		</ul>
	</div>
	<div class="col-md-9">
		<div class="panel panel-default">
			<div class="panel-heading">
				Listings
			</div>
			<div class="panel-body">

				<% @spaces.each do |space| %>
					<div class="row">
						<div class="col-md-2">
							<%= link_to space_path(space) do %>
						  	<%= image_tag space.photos[0], class: "img-responsive" if space.photos? %>
							<% end %>
						</div>
						<div class="col-md-7">
							<h4><%= link_to space.title, space_path(space) %></h4>
						</div>
						<div class="col-md-3 right">
							<%= link_to "Update", edit_space_path(space), class: "btn btn-primary" %>
							<hr>
							<%= link_to "Guest Bookings", guest_bookings_path(space), class: "btn btn-primary" %>
						</div>
					</div>
					<hr>
				<% end %>

			</div>
		</div>
	</div>
</div>
