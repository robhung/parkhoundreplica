<%= form_tag charges_path, id:"stripeForm" do %>

   <article>
     <% if flash[:error].present? %>
       <div id="error_explanation">
         <p><%= flash[:error] %></p>
       </div>
     <% end %>
   </article>
   
   <button id="stripe-button" class="btn btn-primary">Pay Now</button>
      <%= hidden_field_tag 'stripeToken' %>
      <%= hidden_field_tag 'stripeEmail' %>
      <%= hidden_field_tag 'stripeAmount'%>
      <%= hidden_field_tag 'booking', @booking.id %>

      <script>
         var handler = StripeCheckout.configure({
           currency: "aud",
           key: "<%= Rails.configuration.stripe[:publishable_key] %>",
           token: function (token, args) {
             $("#stripeToken").val(token.id);
             $("#stripeEmail").val(token.email);
             $("#stripeAmount").val(<%= @booking.total * 100 %>);
             $("#stripeForm").submit();
           }
         });
         $('#stripe-button').on('click', function (e) {
           // Open Checkout with further options
           handler.open({
             name: '<%= @booking.user.first_name %> <%= @booking.user.last_name %>',
             description: 'Parking space booking for <%= @booking.user.first_name %> by <%= @booking.space.user.first_name %>',
             amount: <%= @booking.cost * 100 %>,
             email: '<%=@booking.user.email%>'
           });
         e.preventDefault();
         });
         $(window).on('popstate', function() {
           handler.close();
         });
       </script>
 <% end %>
